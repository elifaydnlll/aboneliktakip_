@model webproje.Models.Bill

@{
    ViewData["Title"] = "Sil";
}

<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card border-0 shadow-lg" style="background: rgba(30, 41, 59, 0.8); backdrop-filter: blur(10px);">
            <div class="card-body p-5 text-center">
                <div class="mb-4 text-warning display-1">
                    <i class="bi bi-trash"></i>
                </div>
                
                <h2 class="fw-bold text-white mb-3">Faturayı Sil?</h2>
                <p class="text-muted mb-4">
                    <strong class="text-white">@Model.Name</strong> ait faturayı silmek üzeresiniz.
                </p>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-grid gap-2">
                        <input type="submit" value="Evet, Sil" class="btn btn-danger rounded-pill py-2 fw-bold" />
                        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill py-2">Vazgeç</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
